<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <!-- Registration Servlet -->
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>controller.RegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteServlet</servlet-name>
        <servlet-class>controller.DeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateUserServlet</servlet-name>
        <servlet-class>controller.UpdateUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewAllUserServlet</servlet-name>
        <servlet-class>controller.viewAllUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateUserProfile</servlet-name>
        <servlet-class>controller.UpdateUserProfile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GuestRequestCredit</servlet-name>
        <servlet-class>controller.GuestRequestCredit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdatePendingCreditServlet</servlet-name>
        <servlet-class>controller.UpdatePendingCreditServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GuestPayCreditServlet</servlet-name>
        <servlet-class>controller.GuestPayCreditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <!-- Login Servlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <!-- Logout Servlet -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <!-- View Pending User Request Servlet -->
    <servlet>
        <servlet-name>ViewPendingUserRequestServlet</servlet-name>
        <servlet-class>controller.ViewPendingUserRequestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewPendingUserRequestServlet</servlet-name>
        <url-pattern>/viewPendingUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteServlet</servlet-name>
        <url-pattern>/deleteUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateUserServlet</servlet-name>
        <url-pattern>/UpdateUserServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewAllUserServlet</servlet-name>
        <url-pattern>/viewUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateUserProfile</servlet-name>
        <url-pattern>/UpdateUserProfile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GuestRequestCredit</servlet-name>
        <url-pattern>/sendCreditRequest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdatePendingCreditServlet</servlet-name>
        <url-pattern>/updatePendingCredit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GuestPayCreditServlet</servlet-name>
        <url-pattern>/GuestPayMoney</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
